{
    "name": "slim/bankapp",
    "description": "A Slim Framework skeleton application for glimpse-me micro service development",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "authors": [
        {
            "name": "Viktor Sabo",
            "email": "viktor@glimpse.me"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "slim/psr7": "^1.3",
        "php-di/php-di": "^6.3",
        "slim/slim": "^4.7",
        "monolog/monolog": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "config": {
        "sort-packages": true,
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
