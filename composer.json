{
    "name": "glimpse-me/g-back-skeleton",
    "description": "A Slim Framework skeleton application for glimpse-me micro service development",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "authors": [
        {
            "name": "Viktor Sabo",
            "email": "viktor@glimpse.me"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "git@bitbucket.org:glimpse-me/g-back-common.git"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-json": "*",
        "slim/slim": "^3.1",
        "monolog/monolog": "^1.17"
    },
    "autoload": {
        "psr-4": {
            "bank\\": "src//bank"
        }
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "ext-redis": "4.2.0"
        },
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
